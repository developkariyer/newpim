<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}IWAPIM{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <style>
        :root {
            --primary-color: #4481eb;
            --secondary-color: #04befe;
            --accent-color: #3b82f6;
            --light-color: #f5f7fa;
            --dark-color: #1e293b;
            
            /* Light theme variables (mevcut renkler) */
            --bg-primary: #f5f8fa;
            --bg-secondary: #ffffff;
            --text-primary: #1e293b;
            --text-secondary: #64748b;
            --text-muted: #94a3b8;
            --border-color: #e2e8f0;
            --shadow: rgba(0, 0, 0, 0.1);
            --card-bg: #ffffff;
            --input-bg: #ffffff;
        }

        /* Dark theme variables */
        [data-theme="dark"] {
            --bg-primary: #0f172a;
            --bg-secondary: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #cbd5e1;
            --text-muted: #94a3b8;
            --border-color: #334155;
            --shadow: rgba(0, 0, 0, 0.3);
            --card-bg: #1e293b;
            --input-bg: #334155;
        }

        * {
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }

        body {
            background-color: var(--bg-primary);
            color: var(--text-primary);
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Header & Navigation */
        .navbar {
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color)) !important;
            box-shadow: 0 2px 10px var(--shadow);
            padding: 0.7rem 1rem;
        }

        .navbar-brand {
            font-weight: 700;
            color: white !important;
            letter-spacing: 0.5px;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 500;
            padding: 0.5rem 1rem;
            transition: all 0.2s;
        }

        .nav-link:hover {
            color: white !important;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 5px;
        }

        /* Dark Mode Toggle Button */
        .theme-toggle {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            padding: 0.3rem 0.7rem;
            color: white;
            font-size: 0.8rem;
            transition: all 0.3s ease;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.4rem;
            text-decoration: none;
        }

        .theme-toggle:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.3);
            color: white;
            text-decoration: none;
        }

        .theme-toggle i {
            font-size: 0.8rem;
            transition: transform 0.3s ease;
        }

        .theme-toggle:hover i {
            transform: rotate(180deg);
        }

        .dropdown-menu {
            border: none;
            border-radius: 8px;
            box-shadow: 0 10px 15px var(--shadow);
            overflow: hidden;
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
        }

        .dropdown-item {
            padding: 0.6rem 1.2rem;
            transition: all 0.2s;
            color: var(--text-primary);
        }

        .dropdown-item:hover {
            background-color: rgba(59, 130, 246, 0.1);
            color: var(--primary-color);
        }

        /* Main Content */
        main {
            flex: 1;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        .container {
            max-width: 1200px;
        }

        /* Cards */
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 5px 15px var(--shadow);
            transition: transform 0.3s, box-shadow 0.3s;
            overflow: hidden;
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px var(--shadow);
        }

        .card-body {
            color: var(--text-primary);
        }

        /* Buttons */
        .btn {
            border-radius: 6px;
            font-weight: 500;
            padding: 0.5rem 1rem;
            transition: all 0.3s;
        }

        .btn-primary {
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            border: none;
        }

        .btn-primary:hover {
            box-shadow: 0 5px 15px rgba(59, 130, 246, 0.35);
            transform: translateY(-2px);
        }

        .btn-secondary {
            background-color: var(--input-bg);
            border-color: var(--border-color);
            color: var(--text-primary);
        }

        .btn-secondary:hover {
            background-color: var(--border-color);
            color: var(--text-primary);
        }

        /* Forms */
        .form-control, .form-select {
            background-color: var(--input-bg);
            border-color: var(--border-color);
            color: var(--text-primary);
        }

        .form-control:focus, .form-select:focus {
            background-color: var(--input-bg);
            border-color: var(--primary-color);
            color: var(--text-primary);
            box-shadow: 0 0 0 0.2rem rgba(68, 129, 235, 0.25);
        }

        .form-label {
            color: var(--text-primary);
            font-weight: 500;
        }

        /* Alerts */
        .alert {
            border: none;
            border-radius: 10px;
            box-shadow: 0 3px 10px var(--shadow);
        }

        /* Footer */
        footer {
            background-color: var(--card-bg);
            border-top: 1px solid var(--border-color);
            padding: 1.5rem 0;
            margin-top: auto;
            color: var(--text-secondary);
        }

        /* User Info */
        .user-info {
            padding: 1rem;
            border-radius: 10px;
            background-color: var(--card-bg);
            box-shadow: 0 3px 10px var(--shadow);
            margin-bottom: 1.5rem;
            border: 1px solid var(--border-color);
        }

        /* Select2 Dark Mode Support */
        .select2-container--default .select2-selection--single {
            border-radius: 6px;
            height: 38px;
            border-color: var(--border-color);
            background-color: var(--input-bg);
        }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            line-height: 36px;
            color: var(--text-primary);
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 36px;
        }

        .select2-dropdown {
            background-color: var(--card-bg);
            border-color: var(--border-color);
        }

        .select2-results__option {
            color: var(--text-primary);
        }

        .select2-results__option--highlighted {
            background-color: var(--primary-color);
        }

        /* Text Colors */
        .text-muted {
            color: var(--text-muted) !important;
        }

        .text-secondary {
            color: var(--text-secondary) !important;
        }

        /* Tables */
        .table {
            color: var(--text-primary);
        }

        .table th {
            border-color: var(--border-color);
            color: var(--text-primary);
        }

        .table td {
            border-color: var(--border-color);
        }

        .table-striped > tbody > tr:nth-of-type(odd) > td {
            background-color: rgba(0, 0, 0, 0.02);
        }

        [data-theme="dark"] .table-striped > tbody > tr:nth-of-type(odd) > td {
            background-color: rgba(255, 255, 255, 0.02);
        }
    </style>
    {% block stylesheets %}{% endblock %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    {% block head_scripts %}{% endblock %}
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="{{ path('homepage') }}">
                <i class="fas fa-cube me-2"></i>
                <span>IWAPIM</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-th-large me-1"></i> Uygulamalar
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('catalog') }}"><i class="fas fa-book me-2"></i>Katalog</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item"  href="{{ path('product') }}"><i class="fa-brands fa-product-hunt me-2"></i>Ürün Ekle</a></li>
                            <li><hr class="dropdown-divider"></li>
                        </ul>
                    </li>
                    {% block navbaritems %}
                    {% endblock %}
                </ul>

                <div class="d-flex align-items-center gap-3">
                    <!-- Dark Mode Toggle -->
                    <button class="theme-toggle" onclick="toggleTheme()" id="themeToggle">
                        <i class="fas fa-moon" id="themeIcon"></i>
                        <span id="themeText">Dark</span>
                    </button>

                    {% if app.user %}
                        <div class="d-flex align-items-center">
                            <span class="text-white me-3">
                                <i class="fas fa-user-circle me-1"></i> {{ app.user.getUserIdentifier() | default('Kullanıcı') }}
                            </span>
                            <a href="{{ path('app_frontend_logout') }}" class="btn btn-sm btn-light">
                                <i class="fas fa-sign-out-alt me-1"></i> Çıkış
                            </a>
                        </div>
                    {% endif %}
                </div>

                {% block header %}
                {% endblock %}
            </div>
        </div>
    </nav>
</header>

<main>
    <div class="container">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible fade show mb-4" role="alert">
                    <div class="d-flex align-items-center">
                        {% if type == 'success' %}
                            <i class="fas fa-check-circle me-2"></i>
                        {% elseif type == 'danger' or type == 'error' %}
                            <i class="fas fa-exclamation-circle me-2"></i>
                        {% elseif type == 'warning' %}
                            <i class="fas fa-exclamation-triangle me-2"></i>
                        {% else %}
                            <i class="fas fa-info-circle me-2"></i>
                        {% endif %}
                        {{ message }}
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block content %}
            {% if not app.user %}
                <div class="user-info d-flex justify-content-between align-items-center p-4">
                    <div>
                        <h4 class="mb-2">Hoş Geldiniz</h4>
                        <p class="mb-0 text-muted">Lütfen sisteme giriş yapın.</p>
                    </div>
                    <a href="{{ path('app_frontend_login') }}" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i> Giriş Yap
                    </a>
                </div>
            {% endif %}
            <!-- Content will be injected here -->
        {% endblock %}
    </div>
</main>

<footer class="bg-white text-center">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div class="text-muted">
                <small>&copy; {{ "now"|date("Y") }} IWAPIM - Tüm hakları saklıdır</small>
            </div>
            <div>
                {% block footer %}
                {% endblock %}
            </div>
        </div>
    </div>
</footer>

<script>
    // Dark Mode Functions
    function initializeTheme() {
        const savedTheme = localStorage.getItem('theme') || 'light';
        setTheme(savedTheme);
    }

    function setTheme(theme) {
        document.documentElement.setAttribute('data-theme', theme);
        localStorage.setItem('theme', theme);
        updateThemeButton(theme);
    }

    function updateThemeButton(theme) {
        const icon = document.getElementById('themeIcon');
        const text = document.getElementById('themeText');
        
        if (theme === 'dark') {
            icon.className = 'fas fa-sun';
            text.textContent = 'Light';
        } else {
            icon.className = 'fas fa-moon';
            text.textContent = 'Dark';
        }
    }

    function toggleTheme() {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        setTheme(newTheme);
    }

    $(document).ready(function() {
        // Initialize theme
        initializeTheme();
        
        // Initialize Select2 Elements
        $('.select2').select2();

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    });
</script>
{% block body_scripts %}{% endblock %}
</body>
</html>