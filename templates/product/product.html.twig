{% block body_scripts %}
    {{ parent() }}
    <script>
        'use strict';

        /**
         * Product Form Manager - Ana uygulama sƒ±nƒ±fƒ±
         */
        class ProductFormManager {
            constructor() {
                this.initializeConfig();
                this.initializeState();
                this.initializeServices();
                this.bindEvents();
                this.validateEnvironment();
            }

            /**
             * Konfig√ºrasyon ayarlarƒ±
             */
            initializeConfig() {
                this.config = {
                    searchDelay: 300,
                    minSearchLength: 2,
                    endpoints: {
                        productSearch: '/product/search-products',
                        itemSearch: '/product/search',
                        addColor: '/product/add-color'
                    },
                    icons: {
                        colors: 'üé®',
                        brands: 'üè∑Ô∏è',
                        marketplaces: 'üõí',
                        categories: 'üìÇ'
                    },
                    typeLabels: {
                        colors: 'renkler',
                        brands: 'markalar', 
                        marketplaces: 'pazaryerleri',
                        categories: 'kategori'
                    },
                    inputNames: {
                        colors: 'colors[]',
                        brands: 'brands[]',
                        marketplaces: 'marketplaces[]',
                        categories: 'productCategory'
                    },
                    searchableTypes: ['colors'],
                    selectableTypes: ['categories', 'brands', 'marketplaces']
                };
            }

            /**
             * Uygulama state'ini ba≈ülat
             */
            initializeState() {
                this.state = {
                    selectedProduct: null,
                    isEditMode: false,
                    lockedVariants: [],
                    selectedItems: {
                        colors: [],
                        brands: [],
                        marketplaces: [],
                        categories: []
                    },
                    searchTimeout: null,
                    currentStep: 1
                };
            }

            /**
             * Servis sƒ±nƒ±flarƒ±nƒ± ba≈ülat
             */
            initializeServices() {
                this.searchService = new SearchService(this.config);
                this.formService = new FormService(this.config, this.state);
                this.tableService = new TableService();
                this.variationService = new VariationService(this.state);
                this.validationService = new ValidationService();
                this.uiService = new UIService();
            }

            /**
             * Event listener'larƒ± baƒüla
             */
            bindEvents() {
                try {
                    this.bindProductSearchEvents();
                    this.bindFormEvents();
                    this.bindSelectionEvents();
                    this.bindNavigationEvents();
                    this.bindTableEvents();
                } catch (error) {
                    console.error('Event binding failed:', error);
                    this.uiService.showError('Uygulama ba≈ülatƒ±lƒ±rken bir hata olu≈ütu.');
                }
            }

            /**
             * √úr√ºn arama event'leri
             */
            bindProductSearchEvents() {
                const searchInput = this.getElement('productSearchInput');
                if (searchInput) {
                    searchInput.addEventListener('input', this.debounce(
                        (e) => this.handleProductSearch(e.target.value), 
                        this.config.searchDelay
                    ));
                }

                const clearButton = this.getElement('clearSelectedProduct');
                if (clearButton) {
                    clearButton.addEventListener('click', () => this.clearForm());
                }
            }

            /**
             * Form event'leri
             */
            bindFormEvents() {
                // Resim y√ºkleme
                const imageInput = this.getElement('imageInput');
                if (imageInput) {
                    imageInput.addEventListener('change', (e) => this.handleImageUpload(e));
                }

                // Renk ekleme
                const addColorBtn = this.getElement('addNewColorBtn');
                if (addColorBtn) {
                    addColorBtn.addEventListener('click', () => this.handleAddNewColor());
                }

                // Form submit
                const form = this.getElement('productForm');
                if (form) {
                    form.addEventListener('submit', (e) => this.handleFormSubmit(e));
                }
            }

            /**
             * Se√ßim event'leri
             */
            bindSelectionEvents() {
                // Searchable types (AJAX arama)
                this.config.searchableTypes.forEach(type => {
                    const searchElement = this.getElement(`${type}Search`);
                    if (searchElement) {
                        searchElement.addEventListener('input', this.debounce(
                            () => this.handleItemSearch(type), 
                            this.config.searchDelay
                        ));
                    }
                });

                // Selectable types (Select dropdown)
                this.config.selectableTypes.forEach(type => {
                    const selectElement = this.getElement(`${type}Search`);
                    if (selectElement) {
                        selectElement.addEventListener('change', (e) => this.handleItemSelect(type, e));
                    }
                });
            }

