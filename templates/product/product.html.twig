        function generateVariationMatrix() {
            const colors = selectedItems.colors.map(c => c.name);
            const sizesData = JSON.parse(document.getElementById('sizeTableData').value || '[]');
            const sizes = sizesData.map(s => s.beden);
            let customs = [];
            
            try {
                const customData = JSON.parse(document.getElementById('customTableData').value || '{}');
                customs = (customData.rows || []).map(r => r.deger);
            } catch {}

            function cartesianProduct(arrays) {
                return arrays.reduce((a, b) => a.flatMap(d => b.map(e => [...(Array.isArray(d) ? d : [d]), e])));
            }

            let combos = cartesianProduct([colors, sizes]);
            if (customs.length > 0) {
                combos = cartesianProduct([colors, sizes, customs]);
            }

            let html = '<table class="table table-bordered"><thead><tr>';
            html += '<th>Se√ß</th><th>Renk</th><th>Beden</th>';
            if (customs.length > 0) html += '<th>Custom</th>';
            html += '</tr></thead><tbody>';

            console.log('Generating matrix with locked variants:', lockedVariants); // Debug

            combos.forEach((combo, i) => {
                const color = combo[0];
                const size = combo[1];
                const custom = customs.length > 0 ? combo[2] : null;
                
                const isLocked = lockedVariants.some(v => {
                    const colorMatch = (v.color === color);
                    const sizeMatch = (v.size === size);
                    let customMatch = true;
                    if (custom !== null && custom !== undefined) {
                        customMatch = (v.custom === custom);
                    } else {
                        customMatch = (!v.custom || v.custom === null || v.custom === undefined);
                    }
                    const result = colorMatch && sizeMatch && customMatch;
                    if (result) {
                        console.log(`Locked variant found: ${color}-${size}-${custom}`); // Debug
                    }
                    return result;
                });

                const sizeObj = sizesData.find(s => s.beden === size);
                let sizeLabel = size;
                if (sizeObj) {
                    sizeLabel += ` (En: ${sizeObj.en}, Boy: ${sizeObj.boy}, Y√ºkseklik: ${sizeObj.yukseklik}, ${sizeObj.birim})`;
                }

                const rowClass = isLocked ? 'variant-locked' : '';
                const checkboxDisabled = isLocked ? 'disabled checked' : '';
                const lockIcon = isLocked ? 'üîí ' : '';

                html += `<tr class="${rowClass}">
                    <td>
                        <input type="checkbox" class="variation-checkbox" data-index="${i}" ${checkboxDisabled}>
                        ${isLocked ? '<br><small>Mevcut varyant</small>' : ''}
                    </td>
                    <td>${lockIcon}${color}</td>
                    <td>${lockIcon}${sizeLabel}</td>`;
                if (customs.length > 0) html += `<td>${lockIcon}${custom || ''}</td>`;
                html += '</tr>';
            });

            html += '</tbody></table>';
            document.getElementById('variationTableContainer').innerHTML = html;
        }

