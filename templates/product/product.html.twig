        }

        .locked-row input, .locked-row select {
            background-color: #e9ecef;
            cursor: not-allowed;
        }

        .locked-row .remove-row-btn {
            opacity: 0.5;
            cursor: not-allowed;
            pointer-events: none;
        }

        /* Variant matrix styles */
        .variant-locked {
            background-color: #fff3cd;
            color: #856404;
        }

        .variant-locked input[type="checkbox"] {
            cursor: not-allowed;
            pointer-events: none;
        }
    </style>
{% endblock %}

