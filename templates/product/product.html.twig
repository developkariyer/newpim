                <button type="button" class="btn btn-secondary">ƒ∞ptal</button>
                <button type="submit" class="btn btn-primary">√úr√ºn Olu≈ütur</button>
            </div>
        </form>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        document.getElementById('imageInput').addEventListener('change', function(event) {
            console.log("Dosya se√ßimi algƒ±landƒ±."); 
            const previewContainer = document.getElementById('imagePreview');
            const file = event.target.files[0];
            if (file) {
                console.log("Se√ßilen dosya:", file.name);

                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();

                    reader.onload = function(e) {
                        console.log("Dosya okundu, √∂nizleme olu≈üturuluyor."); 
                        previewContainer.innerHTML = ''; 
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.alt = '√úr√ºn Resmi √ñnizlemesi';
                        previewContainer.appendChild(img);
                    };
                    reader.onerror = function() {
                        console.error("Dosya okunurken hata olu≈ütu!");
                        alert("Resim okunurken bir hata meydana geldi.");
                    };
                    reader.readAsDataURL(file);
                } else {
                    alert('L√ºtfen bir resim dosyasƒ± se√ßin.');
                    event.target.value = '';
                    previewContainer.innerHTML = 'üì∑';
                }
            }
        });

        let selectedColors = [];
        let searchTimeout;

        const colorSearchInput = document.getElementById('colorSearch');
        const searchResults = document.getElementById('colorSearchResults');
        const selectedColorsDiv = document.getElementById('selectedColors');
        const hiddenInputsDiv = document.getElementById('hiddenColorInputs');

        colorSearchInput.addEventListener('input', function() {
            const query = this.value.trim();
            
            clearTimeout(searchTimeout);
            
            if (query.length < 2) {
                searchResults.style.display = 'none';
                return;
            }
            
            searchTimeout = setTimeout(() => {
                searchColors(query);
            }, 300);
        });

        document.addEventListener('click', function(e) {
            if (!colorSearchInput.contains(e.target) && !searchResults.contains(e.target)) {
                searchResults.style.display = 'none';
            }
        });

        function searchColors(query) {
            searchResults.innerHTML = '<div style="text-align: center; padding: 1rem; color: #6c757d;">üîç Aranƒ±yor...</div>';
            searchResults.style.display = 'block';
            
            fetch(`/product/search/colors?q=${encodeURIComponent(query)}`)
                .then(response => response.json())
                .then(data => {
                    displaySearchResults(data.items);
                })
                .catch(error => {
                    console.error('Search error:', error);
                    searchResults.innerHTML = '<div style="text-align: center; padding: 1rem; color: #dc3545;">‚ùå Arama hatasƒ±</div>';
                });
        }

        function displaySearchResults(colors) {
            if (colors.length === 0) {
                searchResults.innerHTML = '<div style="text-align: center; padding: 1rem; color: #6c757d;">üòï Renk bulunamadƒ±</div>';
                return;
            }
            
            searchResults.innerHTML = '';
            
            colors.forEach(color => {
                const isSelected = selectedColors.some(selected => selected.id === color.id);
                if (isSelected) return;
                
                const colorItem = document.createElement('div');
                colorItem.style.cssText = 'padding: 0.5rem; cursor: pointer; border-bottom: 1px solid #f1f3f4;';
                colorItem.innerHTML = `
                    <span style="margin-right: 0.5rem;">üé®</span>
                    ${color.name}
                `;
                
                colorItem.addEventListener('click', () => {
                    selectColor(color);
                });
                
                colorItem.addEventListener('mouseenter', () => {
                    colorItem.style.backgroundColor = '#f8f9fa';
                });
                
                colorItem.addEventListener('mouseleave', () => {
                    colorItem.style.backgroundColor = '';
                });
                
                searchResults.appendChild(colorItem);
            });
        }

        function selectColor(color) {
            selectedColors.push(color);
            updateSelectedColors();
            updateHiddenInputs();
            
            colorSearchInput.value = '';
            searchResults.style.display = 'none';
        }

        function removeColor(colorId) {
            selectedColors = selectedColors.filter(color => color.id !== colorId);
            updateSelectedColors();
            updateHiddenInputs();
        }

        function updateSelectedColors() {
            if (selectedColors.length === 0) {
                selectedColorsDiv.innerHTML = '<small style="color: #6c757d;">Se√ßilen renkler burada g√∂r√ºnecek...</small>';
                return;
            }
            
            selectedColorsDiv.innerHTML = selectedColors.map(color => `
                <span style="display: inline-block; background: #007bff; color: white; padding: 0.25rem 0.5rem; margin: 0.25rem; border-radius: 12px; font-size: 0.875rem;">
                    üé® ${color.name}
                    <span onclick="removeColor(${color.id})" style="margin-left: 0.5rem; cursor: pointer; font-weight: bold;">√ó</span>
                </span>
            `).join('');
        }

        function updateHiddenInputs() {
            hiddenInputsDiv.innerHTML = selectedColors.map(color => 
                `<input type="hidden" name="colorTemplate[]" value="${color.id}">`
            ).join('');
        }

    </script>
{% endblock %}