{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .class-selector {
            margin-bottom: 20px;
        }
        .field-selector {
            margin: 15px 0;
            padding: 15px;
            background: #f8f8f8;
            border: 1px solid #e0e0e0;
            border-radius: 4px;
        }
        .field-selector label {
            display: inline-block;
            margin-right: 15px;
            margin-bottom: 10px;
        }
        .objects-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .objects-table th, .objects-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .objects-table th {
            background-color: #f2f2f2;
        }
        .object-image img {
            max-width: 100px;
            max-height: 100px;
        }
    </style>
{% endblock %}

{% block content %}
    <h1>{{ pimcore_input('pageTitle', { 'width': 600, 'placeholder': 'Sayfa Başlığı' }) }}</h1>
    <div class="lead">
        {{ pimcore_wysiwyg('mainContent', { 'height': 300, 'placeholder': 'Ana İçerik' }) }}
    </div>

    <hr>

    <div class="dynamic-object-list">
        <h3>Dinamik Sınıf ve Nesne Gösterimi</h3>
        
        <div class="class-selector">
            <label>Sınıf Seçin:</label>
            {{ pimcore_select('selectedClass', {
                'store': [
                    ['Product', 'Ürün'],
                    ['Category', 'Kategori'],
                    ['User', 'Kullanıcı'],
                    ['Customer', 'Müşteri']
                ],
                'reload': true,
                'width': 300
            }) }}
        </div>

        {% if pimcore_select('selectedClass').getData() %}
            {% set selectedClassName = pimcore_select('selectedClass').getData() %}
            
            {% if editmode %}
                {# Sınıf tanımını al #}
                {% set classDefinition = pimcore_class(selectedClassName) %}
                
                {% if classDefinition %}
                    <div class="field-selector">
                        <h4>Görüntülemek İstediğiniz Alanları Seçin:</h4>
                        
                        {# Her zaman gösterilmesi gereken temel alanlar #}
                        {{ pimcore_checkbox('showId') }} <label>ID</label>
                        {{ pimcore_checkbox('showKey') }} <label>Key</label>
                        {{ pimcore_checkbox('showModificationDate') }} <label>Son Güncelleme</label>
                        
                        {# Sınıfa özgü alanları dinamik olarak al #}
                        {% for field in classDefinition.getFieldDefinitions() %}
                            {{ pimcore_checkbox('field_' ~ field.getName()) }} 
                            <label>{{ field.getTitle() ? field.getTitle() : field.getName() }}</label>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="alert alert-warning">
                        Seçilen sınıf tanımı bulunamadı.
                    </div>
                {% endif %}
            {% endif %}
            
            {% if not editmode %}
                {# Seçilen sınıfa ait tüm nesneleri listele #}
                {% set objectListing = pimcore_object_service.getObjectsByClass(selectedClassName) %}
                
                {% if objectListing and objectListing|length > 0 %}
                    <h4>{{ selectedClassName }} Sınıfına Ait Nesneler</h4>
                    
                    <table class="objects-table">
                        <thead>
                            <tr>
                                {% if pimcore_checkbox('showId').isChecked() %}
                                    <th>ID</th>
                                {% endif %}
                                
                                {% if pimcore_checkbox('showKey').isChecked() %}
                                    <th>Key</th>
                                {% endif %}
                                
                                {% if pimcore_checkbox('showModificationDate').isChecked() %}
                                    <th>Son Güncelleme</th>
                                {% endif %}
                                
                                {# Sınıf tanımını al #}
                                {% set classDefinition = pimcore_class(selectedClassName) %}
                                {% if classDefinition %}
                                    {% for field in classDefinition.getFieldDefinitions() %}
                                        {% if pimcore_checkbox('field_' ~ field.getName()).isChecked() %}
                                            <th>{{ field.getTitle() ? field.getTitle() : field.getName() }}</th>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for object in objectListing %}
                                <tr>
                                    {% if pimcore_checkbox('showId').isChecked() %}
                                        <td>{{ object.getId() }}</td>
                                    {% endif %}
                                    
                                    {% if pimcore_checkbox('showKey').isChecked() %}
                                        <td>{{ object.getKey() }}</td>
                                    {% endif %}
                                    
                                    {% if pimcore_checkbox('showModificationDate').isChecked() %}
                                        <td>{{ object.getModificationDate()|date('Y-m-d H:i') }}</td>
                                    {% endif %}
                                    
                                    {# Sınıf tanımını al #}
                                    {% set classDefinition = pimcore_class(selectedClassName) %}
                                    {% if classDefinition %}
                                        {% for field in classDefinition.getFieldDefinitions() %}
                                            {% if pimcore_checkbox('field_' ~ field.getName()).isChecked() %}
                                                <td>
                                                    {% set fieldName = field.getName() %}
                                                    {% set getter = 'get' ~ fieldName|first|upper ~ fieldName|slice(1) %}
                                                    
                                                    {% if method_exists(object, getter) %}
                                                        {% set value = attribute(object, getter) %}
                                                        
                                                        {# Alan türüne göre özel gösterim #}
                                                        {% if field.getFieldType() == 'image' and value %}
                                                            <div class="object-image">
                                                                <img src="{{ value.getThumbnail('content').getPath() }}" alt="{{ field.getName() }}">
                                                            </div>
                                                        {% elseif field.getFieldType() == 'date' and value %}
                                                            {{ value|date('Y-m-d') }}
                                                        {% elseif field.getFieldType() == 'datetime' and value %}
                                                            {{ value|date('Y-m-d H:i') }}
                                                        {% elseif field.getFieldType() == 'checkbox' %}
                                                            {{ value ? 'Evet' : 'Hayır' }}
                                                        {% elseif field.getFieldType() in ['manyToOneRelation', 'manyToManyRelation'] and value %}
                                                            {% if value is iterable %}
                                                                {% for item in value %}
                                                                    {{ item.getKey() }}{% if not loop.last %}, {% endif %}
                                                                {% endfor %}
                                                            {% else %}
                                                                {{ value.getKey() }}
                                                            {% endif %}
                                                        {% else %}
                                                            {{ value }}
                                                        {% endif %}
                                                    {% else %}
                                                        <em>-</em>
                                                    {% endif %}
                                                </td>
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="alert alert-info">
                        {{ selectedClassName }} sınıfına ait nesne bulunamadı.
                    </div>
                {% endif %}
            {% endif %}
        {% else %}
            {% if not editmode %}
                <div class="alert alert-info">
                    Henüz bir sınıf seçilmemiş.
                </div>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}