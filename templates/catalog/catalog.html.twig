{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .catalog-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .catalog-header {
            text-align: center;
            margin-bottom: 40px;
            color: #333;
        }
        
        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
            margin-top: 30px;
        }
        
        .product-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            padding: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 1px solid #e0e0e0;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        
        .product-name {
            font-size: 1.2em;
            font-weight: 600;
            margin-bottom: 15px;
            color: #2c3e50;
        }
        
        .product-name a {
            text-decoration: none;
            color: inherit;
            transition: color 0.3s ease;
        }
        
        .product-name a:hover {
            color: #3498db;
        }
        
        .product-info {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        
        .info-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 5px 0;
            border-bottom: 1px solid #f0f0f0;
        }
        
        .info-row:last-child {
            border-bottom: none;
        }
        
        .info-label {
            font-weight: 500;
            color: #666;
            font-size: 0.9em;
        }
        
        .info-value {
            color: #333;
            font-weight: 400;
        }
        
        .category-badge {
            background: #3498db;
            color: white;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: 500;
        }
        
        .asin-list {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            margin-top: 5px;
        }
        
        .asin-tag {
            background: #e74c3c;
            color: white;
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 0.75em;
            font-weight: 500;
        }
        
        .no-products {
            text-align: center;
            padding: 60px 20px;
            color: #666;
            font-size: 1.1em;
        }
        
        @media (max-width: 768px) {
            .product-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }
            
            .catalog-container {
                padding: 15px;
            }
        }
    </style>
{% endblock %}

{% block title %}Ürün Kataloğu{% endblock %}

{% block content %}
    <div class="catalog-container">
        <div class="catalog-header">
            <h1>Ürün Kataloğumuz</h1>
            <p>{{ products|length }} ürün listeleniyor</p>
        </div>

        {% if products is not empty %}
            <div class="product-grid">
                {% for product in products %}
                    <div class="product-card">
                        <div class="product-name">
                            <a href="{{ pimcore_url({'id': product.getId(), 'name': product.getKey()}) }}">
                                {{ product.getName() ?: 'İsimsiz Ürün' }}
                            </a>
                        </div>
                        
                        <div class="product-info">
                            <div class="info-row">
                                <span class="info-label">IWASKU:</span>
                                <span class="info-value">{{ product.getIwasku() ?: 'Belirtilmemiş' }}</span>
                            </div>
                            
                            <div class="info-row">
                                <span class="info-label">Ürün Kodu:</span>
                                <span class="info-value">{{ product.getProductIdentifier() ?: 'Belirtilmemiş' }}</span>
                            </div>
                            
                            <div class="info-row">
                                <span class="info-label">Kategori:</span>
                                <span class="info-value">
                                    {% if product.getCategory() %}
                                        <span class="category-badge">{{ product.getCategory().getName() }}</span>
                                    {% else %}
                                        <span>Kategori Yok</span>
                                    {% endif %}
                                </span>
                            </div>
                            
                            {% if product.getAsin() is not empty %}
                                <div class="info-row">
                                    <span class="info-label">ASIN:</span>
                                    <div class="asin-list">
                                        {% for asin in product.getAsin() %}
                                            <span class="asin-tag">{{ asin.getCode() ?: asin.getName() }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="no-products">
                <p>Gösterilecek ürün bulunamadı.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}